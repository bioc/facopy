journal = {Biostatistics (Oxford, England)},
keywords = {Algorithms,Comparative Genomic Hybridization,Comparative Genomic Hybridization: methods,Computer Simulation,Oligonucleotide Array Sequence Analysis,Oligonucleotide Array Sequence Analysis: methods},
month = jul,
number = {3},
pages = {515--8},
pmid = {20207682},
title = {{A very fast and accurate method for calling aberrations in array-CGH data.}},
url = {http://www.ncbi.nlm.nih.gov/pubmed/20207682},
volume = {11},
year = {2010}
}
