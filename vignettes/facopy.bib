issn = {1362-4962},
journal = {Nucleic acids research},
keywords = {DNA Copy Number Variations,Databases,Genome,Human,Humans,Neoplasms,Neoplasms: genetics,Nucleic Acid,Oligonucleotide Array Sequence Analysis,Polymorphism,Single Nucleotide},
month = jan,
number = {Database issue},
pages = {D968--74},
pmid = {20972221},
title = {{CaSNP: a database for interrogating copy number alterations of cancer genome from SNP array data.}},
url = {http://www.pubmedcentral.nih.gov/articlerender.fcgi?artid=3013814\&tool=pmcentrez\&rendertype=abstract},
volume = {39},
